{
  "compilerOptions": {
    "baseUrl": "packages",
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "jsx": "react",
    "paths": {
      "@api/*": ["api/src/*"]
    }
  }
}
